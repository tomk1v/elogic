<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="GET" url="/V1/storelocator/getList">
        <service class="Learning\StoreLocator\Api\LocationRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/storelocator/getById/:locationId">
        <service class="Learning\StoreLocator\Api\LocationRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="DELETE" url="/V1/storelocator/deleteById/:locationId">
        <service class="Learning\StoreLocator\Api\LocationRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
